<% provide :title, t(:home) %>
<div class="row">
  <% if user_signed_in? %>
    <div class="col-md-6">  
      <section class="user_info">
        <%= render "shared/user_info", user: current_user %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>  
    </div>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          <h3><%= t "activity.my_activities" %></h3>
        </div>
        <div class="panel-body">
          <ul class="list-unstyled">
            <%= render @activities %>
            <hr/>
          </ul>
          <div class="text-center">
            <div>
              <%= paginate @activities,
                window: Settings.activity.pagination.window %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="center jumbotron">
      <h1><%= t :welcome %></h1>
    </div>
    <%= link_to t(:sign_up_now), new_user_registration_path,
      class: "btn btn-lg btn-primary" %>
  <% end %>
</div>
