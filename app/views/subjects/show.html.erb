<%= provide :title, @subject.content %>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default text-center">
      <h3><%= @subject.content %></h3>
      <hr/>
      <ul class="list-unstyled">
        <h4><%= t "description" %></h4>
        <br>
        <%= @subject.description %>
        <hr>
      </ul>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default text-center">
      <ul class="list-unstyled">
        <div class="panel panel-default">
          <div class=" row">
            <div class="panel-heading"><h3><%= t "task.task" %></h3></div>
          </div>
          <hr>
          <div class="row">
            <% if @subject.tasks.any? %>
              <% @subject.tasks.each do |task| %>
                <li>
                  <%= link_to course_subject_task_path(@course, @subject, task),
                    class: "btn btn-lg btn-default" do %>
                    <%= t "task.task" %> : <%= task.content %>
                  <% end %>
                </li>
              <% end %>
            <% end %>
          </div>
        </div>
      </ul>
    </div>
  </div>
</div>
