<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:logo), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(:home), root_path %></li>
        <li><%= link_to t(:help), help_path %></li>
        <% if user_signed_in? %>
          <% if current_user.supervisor? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t :supervisor %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:all_trainee), supervisor_users_path %></li>
                <li><%= link_to t("course.all_courses"),
                  supervisor_courses_path %></li>
                <li><%= link_to t("subject.all_subjects"),
                  supervisor_subjects_path %></li>
              </ul>
            </li>
          <% elsif current_user.trainee? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t :trainee %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("user_courses.all_courses"), user_courses_path %></li>
              </ul>
            </li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t :account %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:setting), edit_user_registration_path %></li>
              <li class="divider"></li>
              <li><%= link_to t(:log_out), destroy_user_session_path,
                method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(:login), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
